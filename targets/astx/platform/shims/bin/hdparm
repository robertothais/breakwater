#!/usr/bin/env bash
echo "[shim] hdparm (fake hard drive parameters)" >&2

# Parse basic hdparm arguments
case "$1" in
    -I|--info)
        cat <<EOF
/dev/sda:

ATA device, with non-removable media
	Model Number:       Samsung SSD 980 PRO 1TB
	Serial Number:      S5GXNX0R123456A
	Firmware Revision:  5B2QGXA7
	Transport:          Serial ATA
Capabilities:
	LBA, IORDY(can be disabled)
	Queue depth: 32
	Standby timer values: spec'd by Standard, no device specific minimum
	R/W multiple sector transfer: Max = 128	Current = 128
	DMA: mdma0 mdma1 mdma2 udma0 udma1 udma2 udma3 udma4 udma5 *udma6
	     Cycle time: min=120ns recommended=120ns
	PIO: pio0 pio1 pio2 pio3 pio4
	     Cycle time: no flow control=120ns  IORDY flow control=120ns
Commands/features:
	Enabled	Supported:
	   *	SMART feature set
	   *	Power Management feature set
	   *	Write cache
	   *	Look-ahead
	   *	Host Protected Area feature set
	   *	WRITE_BUFFER command
	   *	READ_BUFFER command
	   *	NOP cmd
	   *	DOWNLOAD_MICROCODE
	   *	48-bit Address feature set
	   *	Device Configuration Overlay feature set
	   *	Mandatory FLUSH_CACHE
	   *	FLUSH_CACHE_EXT
	   *	SMART error logging
	   *	SMART self-test
	   *	General Purpose Logging feature set
	   *	WRITE_{DMA|MULTIPLE}_FUA_EXT
	   *	64-bit World wide name
	   *	IDLE_IMMEDIATE with UNLOAD
	   *	WRITE_UNCORRECTABLE_EXT command
	   *	{READ,WRITE}_DMA_EXT_GPL commands
	   *	Segmented DOWNLOAD_MICROCODE
Security:
	Master password revision code = 65534
		supported
	not	enabled
	not	locked
	not	frozen
	not	expired: security count
		supported: enhanced erase
	2min for SECURITY ERASE UNIT. 2min for ENHANCED SECURITY ERASE UNIT.
Logical Unit WWN Device Identifier: 50025385b0123456
	NAA		: 5
	IEEE OUI	: 002538
	Unique ID	: 5b0123456
Device nominal form factor: 2.5 inches
Checksum: correct
EOF
        ;;
    -t)
        echo "performing read timings: OK"
        echo " Timing cached reads:   3200 MB in  2.00 seconds = 1600.00 MB/sec"
        echo " Timing buffered disk reads: 2100 MB in  3.05 seconds = 688.52 MB/sec"
        ;;
    *)
        echo "Usage: hdparm [options] [device ...]"
        echo " -I   display drive identification"  
        echo " -t   perform device read timings"
        echo " -T   perform cache read timings"
        ;;
esac

exit 0